<aside class="sidebar">
	<div class="sidebar-content">
		<div class="article-information">
			<h2>
				Informations :
			</h2>
			<p>
				<i class="bi bi-calendar2-week-fill">
					<strong>{{article.createdAt|format_datetime('full', 'none')}}</strong>
				</i>
			</p>
		</div>
		{% if article.categories|length > 0 %}
			<div class="article-tag">
				<h2>Cat√©gories :</h2>
				<div class="list-tag">
					{% for categorie in article.categories %}
						<p class="tag">
							<i class="bi bi-tags-fill">
								{{categorie.title}}
							</i>
						</p>
					{% endfor %}
				</div>
			</div>
		{% endif %}

	</div>
</aside>
